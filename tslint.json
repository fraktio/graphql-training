{
  "defaultSeverity": "error",
  "extends": ["tslint:latest", "tslint-config-prettier"],
  "jsRules": {},
  "rules": {
    "ordered-imports": true,
    "prettier": true,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "interface-name": [true, "never-prefix"],
    "no-implicit-dependencies": [true, ["@src", "@app", "@test"]],
    "no-submodule-imports": [true, "@src", "@app", "@test", "lodash", "graphql"],
    "no-default-export": true,
    "no-relative-imports": [true, "allow-siblings"],
    "semicolon": [true, "never"],
    "trailing-comma": [false],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "member-variable-declaration"
    ],
    "quotemark": [true, "single", "jsx-double"]
  },
  "rulesDirectory": ["node_modules/tslint-microsoft-contrib", "tslint-plugin-prettier"]
}
