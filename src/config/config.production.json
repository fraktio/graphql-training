{
  "cors": {
    "accessControlAllowOrigin": ["^https://graphql-training.tunk.io$"]
  },
  "graphql": {
    "playground": false,
    "engine": false
  },
  "authentication": {
    "session": {
      "expirationTime": {
        "amount": 1,
        "unit": "days"
      },
      "refreshTime": {
        "amount": 3,
        "unit": "hours"
      }
    }
  },
  "cache": {
    "redis": {
      "prefix": "training"
    },
    "time": {
      "accounts": 86400
    }
  }
}
